{
 "headAppearance" : {
    "type" : "header",
    "description" : "Appearance"
 },
 "showIcon": {
    "type" : "checkbox",
    "default": true,
    "description": "Show icon",
    "tooltip": "May need to reload Cinnamon"
 },
 "iconName": {
    "type": "iconfilechooser",
    "default": "user-desktop",
    "description" : "The icon to use in the panel:",
    "tooltip" : "Select an icon file, or you can type an icon name into the entry box, for example: desktop",
    "dependency" : "showIcon"
 },
 "borderPlacement": {
    "type": "combobox",
    "default": "none",
    "description": "Border placement",
    "options": {
      "None": "none",
      "Left": "left",
      "Right": "right",
      "Top": "top",
      "Bottom": "bottom"
    },
    "tooltip": ""
 },
 "width": {
    "type": "spinbutton",
    "default" : 32,
    "min" : 2,
    "max" : 50,
    "step" : 1,
    "units" : "pixels",
    "description" : "Applet width in the panel:",
    "tooltip" : "Increase or decrease this spinner value to make the applet wider or narrower in the panel"
 },
 "divSeparator" : {
    "type" : "separator"
 },
 "headPeek" : {
    "type" : "header",
    "description" : "Peek at desktop"
 },
 "enablePeek" : {
    "type" : "checkbox",
    "default" : true,
    "description": "Opacify windows on hover",
    "tooltip": "Take a glance at your desktop and desklets."
 },
 "opacifyDesklets" : {
    "type" : "checkbox",
    "default" : false,
    "dependency" : "enablePeek",
    "description": "Opacify desklets",
    "tooltip": ""
 },
 "peekOpacity": {
    "type": "scale",
    "default" : 80,
    "min" : 20,
    "max" : 100,
    "step" : 10,
    "dependency" : "enablePeek",
    "description" : "Opacity level",
    "tooltip" : ""
 },
 "blur" : {
    "type" : "checkbox",
    "default" : true,
    "dependency" : "enablePeek",
    "description" : "Blur windows on hover",
    "tooltip" : ""
 }
}
